---
import { Icon } from "astro-icon";
const today = new Date();
const svgBaseClass = `w-6 h-6 fill-current stroke-2`;
const iconLinks = [
    {
        name: "Contact",
        handle: "simple-icons:gmail",
        color: `${svgBaseClass} hover:text-[#EA4335]`,
        href: "/contact",
        aria: "Get in touch"
    },
    {
        name: "Github",
        handle: "simple-icons:github",
        color: `${svgBaseClass} hover:text-[#ffffff]`,
        href: "https://github.com/Rjbaird",
        aria: "Check out my Github profile"
    },
    {
        name: "Linkedin",
        handle: "simple-icons:linkedin",
        color: `${svgBaseClass} hover:text-[#0A66C2]`,
        href: "https://www.linkedin.com/in/bairdryan/",
        aria: "Check out my Linkedin profile"
    },

];
---

<footer class="sticky top-[100vh] pt-10 text-white">
    <div class="mx-auto flex max-w-7xl justify-between md:items-center">
        <div class="flex gap-2 text-sm">
            &copy;{today.getFullYear()}
            <span class="hidden md:block">Ryan Baird</span>
            <span class="hidden text-red-400 md:block">|</span>
            <span class="hidden md:block">All rights reserved.</span>
        </div>
        <div class="flex justify-center space-x-6 md:order-2">
            {
                iconLinks.map((link) => (
                    <a
                        href={link.href}
                        target={link.href == "/contact" ? "_self" : "_blank"}
                        rel="noopener noreferrer"
                        aria-label=""
                        class="text-white hover:text-gray-300"
                    >
                        <span class="sr-only">{link.name}</span>
                        <Icon class={link.color} name={link.handle} />
                    </a>
                ))
            }
        </div>
    </div>
</footer>
