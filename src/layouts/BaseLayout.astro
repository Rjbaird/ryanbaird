---
import CabinAnalytics from "@components/CabinAnalytics.astro";
import Footer from "@components/Footer.astro";
import "@fontsource/jetbrains-mono";
import Navigation from "@islands/Navigation.svelte";
import { SEO } from "astro-seo";
import { ViewTransitions } from "astro:transitions";
export interface Props {
  title: string;
  description: string;
  keywords: string[];
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO title={title} description={description} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
  </head>
  <body
    class="bg-[#222222] text-[#F0F0F0FF] mx-auto max-w-7xl text-lg px-4 sm:px-6 lg:px-8 pt-6"
  >
    <div class="mx-auto max-w-4xl min-h-screen pb-8">
      <!-- <Header /> -->
      <Navigation client:load />
      <slot />
      <Footer />
      <CabinAnalytics />
    </div>
  </body>
</html>
